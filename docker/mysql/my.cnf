# ========================================
# MySQL 8.0 Custom Configuration
# BackendProfesional
# ========================================
# Configuración optimizada para desarrollo
# Para producción ajustar según recursos del servidor
# ========================================

[mysqld]
# ========================================
# General Settings
# ========================================
default-authentication-plugin = mysql_native_password
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
skip-character-set-client-handshake

# ========================================
# Connection Settings
# ========================================
max_connections = 200
max_connect_errors = 100
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# ========================================
# Buffer Settings
# ========================================
# InnoDB Buffer Pool (ajustar según RAM disponible)
# Desarrollo: 256M-512M
# Producción: 60-70% de RAM
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 1

# Query Cache (deshabilitado en MySQL 8.0)
# query_cache_type = 0

# ========================================
# InnoDB Settings
# ========================================
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 16M
innodb_log_file_size = 128M

# ========================================
# Logging
# ========================================
# Error Log
log_error = /var/log/mysql/error.log

# Slow Query Log (para debugging)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2

# General Log (deshabilitado en producción)
general_log = 0
general_log_file = /var/log/mysql/general.log

# Binary Log (para replicación)
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_expire_logs_seconds = 864000
# max_binlog_size = 100M

# ========================================
# Performance Schema
# ========================================
performance_schema = ON
performance_schema_max_table_instances = 12500
performance_schema_max_table_handles = 4000

# ========================================
# Timezone
# ========================================
default_time_zone = '-08:00'

# ========================================
# Security
# ========================================
# Deshabilitar LOCAL INFILE (seguridad)
local_infile = 0

# Requerir conexiones seguras en producción
# require_secure_transport = ON

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock
