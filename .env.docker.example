# ========================================
# Docker Environment Configuration
# BackendProfesional
# ========================================
# Copiar este archivo a .env.docker y configurar las variables
# Comando: cp .env.docker.example .env.docker
# ========================================

# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
TZ=America/Los_Angeles
COMPOSE_PROJECT_NAME=backendprofesional

# ========================================
# MYSQL DATABASE
# ========================================
MYSQL_DATABASE=backendprofesional
MYSQL_USER=backend_user
MYSQL_PASSWORD=backend_password_secure_2025
MYSQL_ROOT_PASSWORD=root_password_secure_2025
MYSQL_PORT=3306

# ========================================
# REDIS CACHE
# ========================================
REDIS_PASSWORD=redis_password_secure_2025
REDIS_PORT=6379

# ========================================
# BACKEND LARAVEL
# ========================================
# App Configuration
APP_NAME=BackendProfesional
APP_ENV=production
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=http://localhost:8000

# PHP Version
PHP_VERSION=8.2

# Backend Port (PHP-FPM)
BACKEND_PORT=9000

# JWT Authentication
JWT_SECRET=GENERAR_CON_php_artisan_jwt:secret
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ========================================
# FRONTEND VUE3
# ========================================
NODE_ENV=production
NODE_VERSION=20
FRONTEND_PORT=3000

# Vite Configuration
VITE_API_URL=http://localhost:8000/api

# ========================================
# NGINX REVERSE PROXY
# ========================================
NGINX_HTTP_PORT=8000
NGINX_HTTPS_PORT=8443

